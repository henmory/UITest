<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Logo"
        android:textStyle="bold|italic"
        android:textSize="50dp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_background"
        android:orientation="vertical"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <!--颜色一定要用drawable，颜色是不行的-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your mail"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="30dp"
            android:background="#ffffff"
            android:textCursorDrawable="@drawable/curse_color"
            android:drawableRight="@android:drawable/sym_action_email"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your password"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="30dp"
            android:textCursorDrawable="@drawable/curse_color"
            android:drawableRight="@android:drawable/ic_lock_lock"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Login"
            android:textStyle="bold|italic"
            android:background="@drawable/btn_bg" />
    </LinearLayout>
</LinearLayout>