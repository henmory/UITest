<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--设置角度度数-->
    <corners
        android:radius="0dp"/>
    <!--设置颜色渐变，不能与solid同时用-->
    <gradient
        android:angle="270"
        android:startColor="#000000"
        android:endColor="#ffffff"/>
    <!--设置文字在控件内的位置-->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp"/>
    <!--填充色，不与gradient同用-->
    <!--<solid-->
        <!--android:color="#ffff00"/>-->
    <!--边框设置-->
    <stroke
        android:width="4dp"
        android:color="#ff00ff"
    />
</shape>